<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/include"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmit"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spPackages"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"

                android:background="@drawable/spinner_bg"
                android:dropDownSelector="@color/black"
                android:spinnerMode="dropdown"
                android:layout_marginRight="16dp"
                android:paddingLeft="8dp"
                android:paddingStart="8dp"

                />
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/servicetype"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:spinnerMode="dropdown"
                android:hint="Service Type"
                android:background="@drawable/spinner_bg"
                android:layout_marginRight="16dp"
                android:paddingStart="8dp"
                android:paddingLeft="8dp" />
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/servicecateg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/spinner_bg"
                android:hint="Service Category"
                android:layout_marginRight="16dp"
                android:spinnerMode="dropdown"
                android:paddingStart="8dp"
                android:paddingLeft="8dp" />

            <EditText
                android:id="@+id/ettype_detail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:background="#E3F3FF"
                android:hint="Type Detail"
                android:visibility="gone"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:layout_marginRight="8dp"
                android:paddingStart="8dp"
                android:paddingLeft="8dp" />
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:background="#E3F3FF"
                android:layout_marginTop="8dp"
                android:hint="Name"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:layout_marginRight="16dp"
                android:paddingStart="8dp"
                android:paddingLeft="8dp" />
            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:background="#E3F3FF"
                android:hint="Address"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:inputType="textPostalAddress"
                android:layout_marginRight="16dp"
                android:paddingStart="8dp"
                android:paddingLeft="8dp" />





            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spCountry"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/spinner_bg"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                />
            <EditText
                android:id="@+id/spCity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:background="#E3F3FF"
                android:hint="City"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:inputType="textPostalAddress"
                android:layout_marginRight="16dp"
                android:paddingLeft="8dp"

                />
            <EditText
                android:id="@+id/etemail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:background="#E3F3FF"
                android:hint="Email"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:layout_marginRight="8dp"
                android:paddingStart="8dp"
                android:paddingLeft="8dp" />
            <EditText
                android:id="@+id/etphonenumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:background="#E3F3FF"
                android:hint="Phone Number"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:layout_marginRight="16dp"
                android:paddingStart="8dp"
                android:paddingLeft="8dp" />





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <EditText
                    android:id="@+id/etDate"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:background="#E3F3FF"
                    android:hint="Date"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:editable="false"
                    android:longClickable="false"
                    android:focusable="false"
                    android:layout_weight="5"
                    android:layout_marginRight="16dp"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp" />
                <EditText
                    android:id="@+id/etTime"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="5"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:background="#E3F3FF"
                    android:hint="Time"
                    android:focusable="false"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:editable="false"
                    android:longClickable="false"
                    android:layout_marginRight="16dp"
                    android:paddingStart="25dp"
                    android:paddingLeft="25dp" />




            </LinearLayout>

            <EditText
                android:id="@+id/etRequestDemo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:background="#E3F3FF"
                android:hint="Remark"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:gravity="start"
                android:layout_marginRight="16dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingLeft="8dp" />

        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#61AF38"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/btnCancel"
        />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="#61AF38"
        app:layout_constraintStart_toEndOf="@+id/btnSubmit"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginBottom="8dp"
        android:text="CANCEL"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <include
        android:id="@+id/progressservice"
        layout="@layout/item_progress_sheet"
        android:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>